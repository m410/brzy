<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.brzy.mod</groupId>
  <artifactId>brzy-modules</artifactId>
  <version>0.7</version>
  <packaging>pom</packaging>
  <name>Brzy Modules</name>
  <properties>
    <scala.version>2.8.1</scala.version>
    <fab-conf-version>0.4-SNAPSHOT</fab-conf-version>
    <fab-lib-version>0.4-SNAPSHOT</fab-lib-version>
    <brzy-webapp-version>0.8-SNAPSHOT</brzy-webapp-version>
  </properties>
  <modules>
    <module>brzy-calista</module>
    <module>brzy-email</module>
    <module>brzy-jms</module>
    <module>brzy-jpa</module>
    <module>brzy-scalate</module>
    <module>brzy-scheduler</module>
    <module>brzy-security</module>
    <module>brzy-squeryl</module>
    <module>brzy-tomcat</module>
    <module>brzy-spring</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>brzy-nexus</id>
      <name>Nexus Staging Repo</name>
      <url>http://repo.brzy.org/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>brzy-nexus-snapshot</id>
      <url>http://repo.brzy.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
</project>