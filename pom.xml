<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.brzy</groupId>
  <artifactId>brzy</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>
  <name>Brzy</name>
  <properties>
    <scala.version>2.8.0</scala.version>
  </properties>
  <modules>
    <module>brzy-config</module>
    <module>brzy-shell</module>
    <module>brzy-mvc</module>
    <module>brzy-framework</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scala-tools.snapshot</id>
      <url>http://scala-tools.org/repo-snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>brzy-nexus</id>
      <name>Nexus Staging Repo</name>
      <url>http://brzy.org/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>brzy-nexus-snapshot</id>
      <url>http://brzy.org/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
</project>